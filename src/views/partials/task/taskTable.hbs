<table>
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Description</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        {{#each tasks}}
        <tr>
            <td>{{@index}}</td>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>
                {{!-- <button><i class="fa-solid fa-check"></i></button>
                <button><i class="fa-solid fa-pen-to-square"></i></button>
                <button><i class="fa-solid fa-trash"></i></button> --}}

                {{#if done}}
                <a href="/tasks/{{_id}}/toogleDone">Undone</a>
                {{else}}
                <a href="/tasks/{{_id}}/toogleDone">Done</a>
                {{/if}}
                <a href="/tasks/{{_id}}/delete">Delete</a>
                <a href="/tasks/{{_id}}/edit">Update</a>
            </td>
            {{/each}}
        </tr>
    </tbody>
</table>