{{#if tasks}}
<table class="resp">
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Description</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        {{#each tasks}}
        <tr>
            <td>{{@index}}</td>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>
                {{!-- DONE --}}
                {{#if done}}
                <a href="/tasks/{{_id}}/toogleDone" class="btn btn-success">
                    <i class="fa-regular fa-circle-check"></i>
                </a>
                {{else}}
                <a href="/tasks/{{_id}}/toogleDone" class="btn btn-secondary">
                    <i class="fa-regular fa-circle-xmark"></i>
                </a>
                {{/if}}

                {{!-- EDIT --}}
                <a class="btn btn-info btn-block" href="/tasks/{{_id}}/edit">
                    <i class="fa-solid fa-pen-to-square"></i>
                </a>

                {{!-- DELETE --}}
                <a class="btn btn-danger" onclick="return confirm('¿Estás seguro que deseas eliminar el registro?')"
                    href="/tasks/{{_id}}/delete">
                    <i class="fa-solid fa-trash"></i>
                </a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
        <h1>No hay tareas</h1>
        <img src="/icons/tasks.png" class="w-50">
    </div>
</div>
{{/if}}